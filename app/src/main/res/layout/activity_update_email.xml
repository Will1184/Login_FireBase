<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmailActivity">

    <ImageView
        android:id="@+id/back_arrow_email"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/current_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/text_send_verification_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Send Verification Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_new_email"
        android:layout_width="315dp"
        android:layout_height="82dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="113dp"
        android:backgroundTint="#000000"
        android:text="Update Email"
        app:layout_constraintBottom_toTopOf="@+id/text_send_verification_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_email" />

    <EditText
        android:id="@+id/current_email"
        android:layout_width="315dp"
        android:layout_height="52dp"

        android:layout_marginStart="38dp"
        android:layout_marginTop="367dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Current Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/new_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="315dp"
        android:layout_height="52dp"

        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="New Email Adress"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/button_new_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_email" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>